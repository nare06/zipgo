%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "form form-horizontal product"}) do |f|
  = devise_error_messages!
  %div.row
    = f.label :email , class: "control-label col-lg-2"
    .col-lg-6
      = f.email_field :email, class: "form-control", :autofocus => true
      %br
  %div.row
    = f.label :password, class: "control-label col-lg-2"
    .col-lg-6
      = f.password_field :password, class: "form-control"
      %br
  %div.row
    = f.label :password_confirmation, class: "control-label col-lg-2"
    .col-lg-6
      = f.password_field :password_confirmation, class: "form-control"
      %br
  %div= f.submit "Sign up", class: "btn btn-sm btn-primary", style: "position: relative; float: 40px; left: 17%;"
= render "devise/shared/links"
