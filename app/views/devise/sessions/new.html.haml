%h2 Sign in
= form_for(resource, :as => resource_name, :url => session_path(resource_name), html:{class: "form form-horizontal product"}) do |f|
  %div.row
    = f.label :email, class: "control-label col-lg-2"
    .col-lg-6
      = f.email_field :email, class: "form-control", :autofocus => true
      %br
  %div.row
    = f.label :password, class: "control-label col-lg-2"
    .col-lg-6
      = f.password_field :password, class: "form-control"
      %br
  - if devise_mapping.rememberable?
    %div
      .col-lg-2
      .col-lg-6
        = f.check_box :remember_me
        = f.label :remember_me
      %br
    %br  

  %div= f.submit "Sign in", class: "btn btn-sm btn-primary", style: "position: relative; float: 40px; left: 17%;"
= render "devise/shared/links"
